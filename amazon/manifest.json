{
  "manifest_version": 3,
  "name": "YouTube Music Amazon Music Search",
  "version": "1.1",
  "description": "Search currently playing YouTube Music track on Amazon Music",
  "permissions": [
    "tabs",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "*://music.youtube.com/*"
  ],
  "action": {
    "default_icon": "icons/icon.png",
    "default_title": "Search on Amazon Music"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "*://www.youtube.com/*",
        "*://music.youtube.com/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "ytam@jcaffrey.com",
      "strict_min_version": "140.0"
    }
  }
}
